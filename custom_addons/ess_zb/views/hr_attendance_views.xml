<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Geofencing Location List View -->
    <record id="view_hr_attendance_location_tree" model="ir.ui.view">
        <field name="name">hr.attendance.location.tree</field>
        <field name="model">hr.attendance.location</field>
        <field name="arch" type="xml">
            <list string="Attendance Locations">
                <field name="name"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="radius_km"/>
                <field name="employee_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Geofencing Location Form View -->
    <record id="view_hr_attendance_location_form" model="ir.ui.view">
        <field name="name">hr.attendance.location.form</field>
        <field name="model">hr.attendance.location</field>
        <field name="arch" type="xml">
            <form string="Attendance Location">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                            <field name="radius_km"/>
                        </group>
                        <group>
                            <field name="company_id"/>
                            <field name="active"/>
                            <field name="employee_count"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Enter office address..."/>
                    </group>
                    <notebook>
                        <page string="Assigned Employees" name="employees">
                            <field name="employee_ids" widget="many2many_tags">
                                <list>
                                    <field name="name"/>
                                    <field name="job_id"/>
                                    <field name="department_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Action -->
    <record id="action_hr_attendance_location" model="ir.actions.act_window">
        <field name="name">Attendance Locations</field>
        <field name="res_model">hr.attendance.location</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first attendance location
            </p>
            <p>
                Define locations where employees can check in/out with geofencing radius.
            </p>
        </field>
    </record>
<!-- Under Attendances Module -->
    <menuitem id="menu_attendance_location_attendances"
          name="Attendance Locations"
          parent="hr_attendance.menu_hr_attendance_root"
          action="action_hr_attendance_location"
          groups="hr.group_hr_manager"
          sequence="10"/>

    <!-- Root Menu (appears in main menu bar)
    <menuitem id="menu_attendance_location_root"
              name="Attendance Locations"
              web_icon="ess_zb,static/description/icon.png"
              action="action_hr_attendance_location"
              groups="hr.group_hr_manager"
              sequence="90"/> -->

    <!-- Enhanced Attendance Form View -->
    <record id="view_hr_attendance_inherit_form" model="ir.ui.view">
        <field name="name">hr.attendance.form.inherit</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='check_out']" position="after">
                <field name="attendance_location_id"/>
                <field name="is_within_geofence"/>
                <field name="distance_from_office"/>
                <field name="check_in_latitude"/>
                <field name="check_in_longitude"/>
                <field name="check_in_location"/>
                <field name="check_out_latitude"/>
                <field name="check_out_longitude"/>
                <field name="check_out_location"/>
            </xpath>
        </field>
    </record>

    <!-- Employee Form View - Add Locations Tab -->
    <record id="view_employee_form_inherit_attendance_location" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.attendance.location</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Attendance Locations" name="attendance_locations">
                    <field name="attendance_location_ids">
                        <list>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="radius_km"/>
                            <field name="active"/>
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
